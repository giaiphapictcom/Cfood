@using V308CMS.Common
@using V308CMS.Data.Enum
@using V308CMS.Helpers
@using V308CMS.Helpers.Url
@model List<V308CMS.Data.Brand>
@if (Model != null && Model.Count > 0)
{
    var currentRouteData = (RouteValueDictionary)ViewBag.CurrentRouteData;
    <div class="title">
        <h3>
            <span>
                THƯƠNG HIỆU
            </span>
        </h3>
    </div>
    <div class="content">
        <ul>
            @foreach (var brand in Model)
            {
                <li>             
                   
                        <a title="@brand.name" href="@Url.CategoryFilterUrl(currentRouteData, string.Format("|{0}_{1}|", (int) FilterEnum.ByBrand, brand.id))">
                            <label>
                                @brand.name
                            </label>
                        </a>
                   
                                    
                </li>
            }           
        </ul>
    </div>

}
