@model List<V308CMS.Data.ProductManufacturer>

@if (Model != null && Model.Count > 0)
{
    <div class="title">
        <h3>
            <span>
                NHÀ SẢN XUẤT
            </span>
        </h3>
    </div>
    <div class="content">
        <ul>
            @foreach (var manufacturer in Model)
            {
                 <li>
                     <input type="checkbox" value="@manufacturer.Name">
                     <label>
                        @manufacturer.Name
                    </label>
                 </li>
            }    
        </ul>
    </div>
}
