@{
    Layout = "~/Views/Affiliate/Layout/Backend.cshtml";
    string PageTitle = "Tạo link phân phối";
}
@section header {
    <title>@PageTitle</title>

}
<h4>@PageTitle</h4>
<form style="width: 60%; margin: 0 auto;">
    <div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label for="exampleTextarea">Url <span class="notification-red"></span></label>
            <textarea class="form-control" id="exampleTextarea" rows="2"></textarea>
            <small id="emailHelp" class="form-text text-muted text-note">xem danh sách tên miền hỗ trợ</small>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12 placenote">Thông tin thêm (không bắt buộc)</div>
    
    <div class="col-md-6">
        <div class="form-group">
            <label for="exampleInputPassword1">Nguồn chiến dịch</label>
            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="VD: google, facebook">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="exampleInputPassword1">Các tiếp thị</label>
            <input type="text" class="form-control" id="approl" placeholder="VD: cpc, banner, email">
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label for="exampleInputPassword1">Tên chiến dịch</label>
            <input type="text" class="form-control" id="name" placeholder="VD: tên sản phẩm, Chương trình, Sự kiện">
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label for="exampleInputPassword1">Nội dung sự kiện</label>
            <textarea class="form-control" id="exampleTextarea" rows="3" placeholder="Nội dung chiến dịch dùng để phân biệt các quảng cáo"></textarea>
        </div>
    </div>
</div>
    <button type="submit" class="btn btn-success">Tạo Link</button>
</form>
